<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.startupweek.speciall">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".main.activity.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.MainActivity" />

        <activity
            android:name=".main.activity.HomeActivity"
            android:label="@string/title_activity_home" />

        <activity
            android:name=".main.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".main.activity.HomeActivity"/>
    </application>

</manifest>