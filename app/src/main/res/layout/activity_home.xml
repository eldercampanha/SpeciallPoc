<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.startupweek.speciall.main.activity.HomeActivity"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/alphabetCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/secondaryCardColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/alphabetText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightColor"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/alphabetText"/>

                <ImageView
                    android:id="@+id/alphabetButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-40dp"/>
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/numberCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            card_view:cardCornerRadius="4dp"
            android:layout_below="@+id/alphabetCard"
            android:layout_alignLeft="@+id/alphabetCard"
            android:layout_alignStart="@+id/alphabetCard"
            android:layout_alignRight="@id/alphabetCard"
            android:layout_alignEnd="@id/alphabetCard"
            card_view:cardBackgroundColor="@color/cardColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/numberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightColor"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/numberText"/>

                <ImageView
                    android:id="@+id/numberButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-40dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/symbolCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/numberCard"
            android:layout_alignLeft="@id/numberCard"
            android:layout_alignStart="@id/numberCard"
            android:layout_alignRight="@id/numberCard"
            android:layout_alignEnd="@id/numberCard"
            card_view:cardBackgroundColor="@color/colorAccent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/symbolText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightColor"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/symbolText"/>

                <ImageView
                    android:id="@+id/symbolButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_36dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-40dp"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>