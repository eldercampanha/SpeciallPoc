<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.startupweek.speciall.main.activity.HomeActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alphabetCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:src="@drawable/alphabet_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/alphabetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alfabeto"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/numberCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:layout_below="@+id/alphabetCard"
        android:layout_alignLeft="@+id/alphabetCard"
        android:layout_alignStart="@+id/alphabetCard"
        android:layout_alignRight="@id/alphabetCard"
        android:layout_alignEnd="@id/alphabetCard">

        <TextView
            android:id="@+id/numberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numeros"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/symbolCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/numberCard"
        android:layout_alignLeft="@id/numberCard"
        android:layout_alignStart="@id/numberCard"
        android:layout_alignRight="@id/numberCard"
        android:layout_alignEnd="@id/numberCard">

        <TextView
            android:id="@+id/symbolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simbolos"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>